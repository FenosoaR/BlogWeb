<div class="header">
    <div class="row">
        <div class="col-lg-12 col-lg-6 col-lg-4 col-lg-2">
            <span class="logo">BLOG</span>
            <ul>
                <li><a href="/">Home</a></li>
                <% for(item of categories){ %>
                    <li><a href="/allCategoryPost/<%= item.id %>"><%= item.name %></a></li>
                    <% } %>  
                    <li><a href="/write">Write</a></li>
                   <% if(user){ %>
                        <li>
                            <% if(user.pdp){ %>
                                <div class="user-profil">
                                    <img src="/pdp/<%= user.pdp %>" alt="">
                                </div>
                            <% } else {%>
                                <div class="user-profil">
                                </div>
                            <% } %>
                          
                        </li>
                        <li><%= user.username %></li>
                        <li><i class="fa fa-sign-out"></i><a href="/logout">Log Out</a></li>
                    <% }else{ %>
                        <li><i class=" fa fa-sign-in"></i>   <a href="/login">Login</a></li>
                    <% } %>       
            </ul>
            
        </div>
      </div>

</div>


