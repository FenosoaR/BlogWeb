<%- include('component/header') %>  
  <div class="container">
    <div class="row">
      <% for(item of posts){ %>
        <div class="col-lg-4">
          <div class="post">
            <% if(item.file == null){ %>
              <div class="card-post" style="display: none;">
                <img src="/upload/<%= item.file %>" alt="">
              </div>
            <% }else{ %>
              <div class="card-post">
                <img src="/upload/<%= item.file %>" alt="">
              </div>
              <% } %>
          
            <% if(item.title.length > 30){ %>
              <h3><a href="/single/<%= item.id %>"><%= item.title.substring(0 , 20)+' ...' %></a></h3>
            <% }else { %>
              <h3><a href="/single/<%= item.id %>"><%= item.title %></a></h3>
            <% } %>    
            <hr>
            <span>Post√© par : <%= item.User.username %></span>
            <hr>
            <% if(item.content.length > 100){ %>
              <p><%= item.content.substring(0 , 80)+' ...' %></p>
            <% }else{ %>
              <p><%= item.content %></p>
            <% } %>
            <hr>
            <p><%= dateDePub(item.createdAt) %></p>
          </div>
     
        </div>
        <% } %>
    </div>
  </div>









