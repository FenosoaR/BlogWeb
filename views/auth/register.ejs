<div class="auth">
    <div class="row">        
        <div class="col-lg-12 col-lg-6 col-lg-4">           
            <form action="" method="post" class="form-register">
                <h1>Register</h1>  
                <% if(error){ %>
                    <% for(item of error) {%>
                        <div>
                            <span><%= item %></span>
                        </div>
                        <% } %>         
                <% } %>
                <div>
                    <input type="text" name='username' id='username' placeholder ='Username' required/> 
                    <span class="error-message" id="username-error"></span>   
                </div>
                <div>
                    <input id="email" type="email"  name='email' placeholder ='Email' required/>
                    <span class="error-message" id="email-error"></span>  
                </div>
                <div>
                    <input type="password" name='password' id="password" placeholder ='Password' required/>
                    <span class="error-message" id="password-error"></span>
                </div>
                <div>
                    <input type="password" name='confirmation' id="confirmation" placeholder ='Confirmation' required/>
                    <span class="error-message" id="confirmation-error"></span>
                </div>            
                <button class="btn-register">Register</button>
                <span>Do you have an account? <br /><a href="/login">Login</a> </span>
            </form>
        </div>
    </div>
 
</div>








